MAKE=@MAKE_PROG@
CD=@CD_PROG@
TEST=@TEST_PROG@

GUI_FLAG=@GUI_FLAG@

SL_DIR=sl
LLREPO_DIR=llrepo
XSL_DIR=xsl

#####
all :
	$(CD) $(SL_DIR) && $(MAKE)
	$(CD) $(LLREPO_DIR) && $(MAKE)
	-$(TEST) $(GUI_FLAG) = "yes" && $(CD) $(XSL_DIR) && $(MAKE)

install :
	$(CD) $(SL_DIR) && $(MAKE) install
	$(CD) $(LLREPO_DIR) && $(MAKE) install
	-$(TEST) $(GUI_FLAG) = "yes" && $(CD) $(XSL_DIR) && $(MAKE) install

uninstall :
	$(CD) $(SL_DIR) && $(MAKE) uninstall
	$(CD) $(LLREPO_DIR) && $(MAKE) uninstall
	-$(TEST) $(GUI_FLAG) = "yes" && $(CD) $(XSL_DIR) && $(MAKE) uninstall

clean :
	$(CD) $(SL_DIR) && $(MAKE) clean
	$(CD) $(LLREPO_DIR) && $(MAKE) clean
	-$(TEST) $(GUI_FLAG) = "yes" && $(CD) $(XSL_DIR) && $(MAKE) clean

