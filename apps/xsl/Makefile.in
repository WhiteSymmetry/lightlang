MKDIR=@MKDIR_PROG@
INS=@INSTALL@
CP=@CP_PROG@
LN=@LN_PROG@
RM=@RM_PROG@
CHMOD=@CHMOD_PROG@
LS=@LS_PROG@
PYTHON=@PYTHON_PROG@

XSL_PROG=xsl
XSL_PROG_ALIAS=lightlang
XSL_MAIN=src/pyqt4/xsl.py
XSL_CONFIG=src/pyqt4/Config.py
XSL_PYQT4_DIR=src/pyqt4
XSL_TR_DIR=src/tr
XSL_IFA_DIR=src/ifa
XSL_TRSITES_DIR=src/trsites
XSL_ICONS_DIR=src/icons
XSL_ICONS_FLAGS_DIR=src/icons/flags
XSL_PICTURES_DIR=src/pictures
XSL_DESKTOP_SCRIPT=src/desktop/xsl.desktop
XSL_DESKTOP_ICON=src/desktop/xsl.png

INS_XSL_PROG_DIR=@bindir@
INS_XSL_PROG_ALIAS_DIR=@bindir@
INS_XSL_LIBS_DIR=@libdir@/xsl
INS_XSL_SHARES_DIR=@datarootdir@/xsl
INS_XSL_PYQT4_DIR=@libdir@/xsl/pyqt4
INS_XSL_TR_DIR=@datarootdir@/xsl/tr
INS_XSL_IFA_DIR=@datarootdir@/xsl/ifa
INS_XSL_TRSITES_DIR=@datarootdir@/xsl/trsites
INS_XSL_ICONS_DIR=@datarootdir@/xsl/icons
INS_XSL_ICONS_FLAGS_DIR=@datarootdir@/xsl/icons/flags
INS_XSL_PICTURES_DIR=@datarootdir@/xsl/pictures
INS_XSL_DESKTOP_SCRIPT_DIR=@datarootdir@/applications
INS_XSL_DESKTOP_ICON_DIR=@datarootdir@/icons

#####
all :
	-for file in `$(LS) $(XSL_PYQT4_DIR)/*.py`; do \
		$(PYTHON) -c 'import sys, py_compile; py_compile.compile(sys.argv[1])' $$file; \
	done
	$(CP) -f $(XSL_MAIN) $(XSL_PROG)
	$(CHMOD) +x $(XSL_PROG)

install :
	$(RM) -rf $(DESTDIR)$(INS_XSL_PYQT4_DIR)
	$(RM) -rf $(DESTDIR)$(INS_XSL_ICONS_DIR)
	$(RM) -rf $(DESTDIR)$(INS_XSL_PICTURES_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_PROG_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_PROG_ALIAS_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_PYQT4_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_TR_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_IFA_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_TRSITES_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_ICONS_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_ICONS_FLAGS_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_PICTURES_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_DESKTOP_SCRIPT_DIR)
	$(MKDIR) -p $(DESTDIR)$(INS_XSL_DESKTOP_ICON_DIR)
	$(INS) $(XSL_PROG) $(DESTDIR)$(INS_XSL_PROG_DIR)
	-$(LN) -s $(INS_XSL_PROG_DIR)/$(XSL_PROG) $(DESTDIR)$(INS_XSL_PROG_ALIAS_DIR)/$(XSL_PROG_ALIAS)
	$(CP) -f $(XSL_PYQT4_DIR)/*.py $(DESTDIR)$(INS_XSL_PYQT4_DIR)
	-for file in `$(LS) $(DESTDIR)$(INS_XSL_PYQT4_DIR)/*.py`; do \
		$(PYTHON) -c 'import sys, py_compile; py_compile.compile(sys.argv[1])' $$file; \
	done
	-$(CP) -f $(XSL_TR_DIR)/*.qm $(DESTDIR)$(INS_XSL_TR_DIR)
	-$(CP) -f $(XSL_IFA_DIR)/*.xml $(DESTDIR)$(INS_XSL_IFA_DIR)
	-$(CP) -f $(XSL_IFA_DIR)/*.ifa $(DESTDIR)$(INS_XSL_IFA_DIR)
	-$(CP) -f $(XSL_TRSITES_DIR)/*.xml $(DESTDIR)$(INS_XSL_TRSITES_DIR)
	$(CP) -f $(XSL_ICONS_DIR)/*.png $(DESTDIR)$(INS_XSL_ICONS_DIR)
	$(CP) -f $(XSL_ICONS_FLAGS_DIR)/*.png $(DESTDIR)$(INS_XSL_ICONS_FLAGS_DIR)
	$(CP) -f $(XSL_PICTURES_DIR)/*.png $(DESTDIR)$(INS_XSL_PICTURES_DIR)
	$(CP) -f $(XSL_PICTURES_DIR)/*.gif $(DESTDIR)$(INS_XSL_PICTURES_DIR)
	$(INS) $(XSL_DESKTOP_SCRIPT) $(DESTDIR)$(INS_XSL_DESKTOP_SCRIPT_DIR)
	$(INS) $(XSL_DESKTOP_ICON) $(DESTDIR)$(INS_XSL_DESKTOP_ICON_DIR)

uninstall :
	$(RM) -f $(DESTDIR)$(INS_XSL_DESKTOP_ICON_DIR)/xsl.png
	$(RM) -f $(DESTDIR)$(INS_XSL_DESKTOP_SCRIPT_DIR)/xsl.desktop
	$(RM) -rf $(DESTDIR)$(INS_XSL_LIBS_DIR)
	$(RM) -rf $(DESTDIR)$(INS_XSL_SHARES_DIR)
	$(RM) -f $(DESTDIR)$(INS_XSL_PROG_ALIAS_DIR)/$(XSL_PROG_ALIAS)
	$(RM) -f $(DESTDIR)$(INS_XSL_PROG_DIR)/$(XSL_PROG)

clean :
	$(RM) -f $(XSL_PROG) $(XSL_MAIN) $(XSL_CONFIG)
	$(RM) -f $(XSL_PYQT4_DIR)/*.pyc

_update_ru_ts :
	pylupdate4 -verbose src/pyqt4/*.py -ts src/tr/ru.ts

_update_ru_ts_noobsolete :
	pylupdate4 -verbose -noobsolete src/pyqt4/*.py -ts src/tr/ru.ts

_create_ru_qm :
	lrelease-qt4 -verbose src/tr/ru.ts -qm src/tr/ru.qm

