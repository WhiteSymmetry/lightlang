import sys
import getopt

#####
if __name__ == "__main__" :
	enable_psyco_flag = False
	libs_dir = "@prefix@/lib/xsl/pyqt4"

	try :
		opts, args = getopt.getopt(sys.argv[1:], "hs:",
			["enable-psyco", "libs-dir=", "session="])

		for opt, arg in opts :
			if opt in ("--enable-psyco") :
				enable_psyco_flag = True
			if opt in ("--libs-dir") :
				libs_dir = arg
			if opt in ("-h", "--help") :
				print >> sys.stderr, "usage: xsl [--enable-psyco|--libs-dir=<dir>|-h|--help]"
				sys.exit(0)
	except :
		print >> sys.stderr, "xsl: options parser error: ignored"

	#####

	sys.path.append(libs_dir)
	import Main # raises accept

	if enable_psyco_flag :
		try :
			import psyco
			psyco.full()
			print "xsl: experemetal \"psyco\" module is enabled"
		except :
			print >> sys.stderr, "xsl: cannot enable experemental \"psyco\" module: ignored"

	#####

	main = Main.Main(sys.argv)
	main.run()
