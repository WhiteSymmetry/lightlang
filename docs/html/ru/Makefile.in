MKDIR=@MKDIR_PROG@
CP=@CP_PROG@
RM=@RM_PROG@

RU_HTML_DOC_DIR=html

INS_DOC_DIR=@prefix@/share/doc/lightlang
INS_RU_HTML_DOC_DIR=@prefix@/share/doc/lightlang/html/ru

#####
install :
	$(MKDIR) -p $(DESTDIR)$(INS_RU_HTML_DOC_DIR)
	$(CP) $(RU_HTML_DOC_DIR)/*.html $(DESTDIR)$(INS_RU_HTML_DOC_DIR)
	$(CP) $(RU_HTML_DOC_DIR)/*.png $(DESTDIR)$(INS_RU_HTML_DOC_DIR)

uninstall :
	$(RM) -rf $(DESTDIR)$(INS_DOC_DIR)

