EN_DIR=en
RU_DIR=ru

#####
install :
	$(MAKE) -C $(EN_DIR) install
	$(MAKE) -C $(RU_DIR) install

uninstall :
	$(MAKE) -C $(EN_DIR) uninstall
	$(MAKE) -C $(RU_DIR) uninstall

_pack_en_mans :
	-cd en/man && for file in `ls *.?`; do \
		gzip -c $$file > $$file.gz; \
	done

_pack_ru_mans :
	-cd ru/man && for file in `ls *.?`; do \
		gzip -c $$file > $$file.gz; \
	done

