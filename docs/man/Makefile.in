CD=@CD_PROG@

EN_DIR=en
RU_DIR=ru

#####
install :
	$(CD) $(EN_DIR) && $(MAKE) install
	$(CD) $(RU_DIR) && $(MAKE) install

uninstall :
	$(CD) $(EN_DIR) && $(MAKE) uninstall
	$(CD) $(RU_DIR) && $(MAKE) uninstall

_pack_en_mans :
	-for file in `ls en/man/*.?`; do \
		gzip -c $$file > $$file.gz; \
	done

_pack_ru_mans :
	-for file in `ls ru/man/*.?`; do \
		gzip -c $$file > $$file.gz; \
	done

