MKDIR = @MKDIR_BIN@
CP = @CP_BIN@
RM = @RM_BIN@
TEST = @TEST_BIN@

GUI_FLAG = @GUI_FLAG@

EN_MAN_DOC_DIR = man

INS_EN_MAN_DOC_DIR = @mandir@
# section : man1


##### Targets #####

install :
	$(MKDIR) -p $(DESTDIR)$(INS_EN_MAN_DOC_DIR)/man1
	$(CP) -f $(EN_MAN_DOC_DIR)/sl.1.gz $(DESTDIR)$(INS_EN_MAN_DOC_DIR)/man1
	$(CP) -f $(EN_MAN_DOC_DIR)/llrepo.1.gz $(DESTDIR)$(INS_EN_MAN_DOC_DIR)/man1
	-$(TEST) $(GUI_FLAG) = "yes" && $(CP) -f $(EN_MAN_DOC_DIR)/xsl.1.gz $(DESTDIR)$(INS_EN_MAN_DOC_DIR)/man1

uninstall :
	$(RM) -f $(DESTDIR)$(INS_EN_MAN_DOC_DIR)/man1/sl.1.gz
	$(RM) -f $(DESTDIR)$(INS_EN_MAN_DOC_DIR)/man1/llrepo.1.gz
	-$(TEST) $(GUI_FLAG) = "yes" && $(RM) -f $(DESTDIR)$(INS_EN_MAN_DOC_DIR)/man1/xsl.1.gz


.PHONY : install uninstall

