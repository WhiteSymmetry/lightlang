MKDIR=@MKDIR_PROG@
CP=@CP_PROG@
RM=@RM_PROG@
TEST=@TEST_PROG@

GUI_FLAG=@GUI_FLAG@

RU_MAN_DOC_DIR=man

INS_RU_MAN_DOC_DIR=@prefix@/share/man/ru
# section : man1

#####
install :
	$(MKDIR) -p $(DESTDIR)$(INS_RU_MAN_DOC_DIR)
	$(CP) $(RU_MAN_DOC_DIR)/sl.1.gz $(DESTDIR)$(INS_RU_MAN_DOC_DIR)/man1
	$(CP) $(RU_MAN_DOC_DIR)/llrepo.1.gz $(DESTDIR)$(INS_RU_MAN_DOC_DIR)/man1
	-$(TEST) $(GUI_FLAG) = "yes" && $(CP) $(RU_MAN_DOC_DIR)/xsl.1.gz $(DESTDIR)$(INS_RU_MAN_DOC_DIR)/man1

uninstall :
	$(RM) -f $(DESTDIR)$(INS_RU_MAN_DOC_DIR)/man1/sl.1.gz
	$(RM) -f $(DESTDIR)$(INS_RU_MAN_DOC_DIR)/man1/llrepo.1.gz
	-$(TEST) $(GUI_FLAG) = "yes" && $(RM) -f $(DESTDIR)$(INS_RU_MAN_DOC_DIR)/man1/xsl.1.gz

