MKDIR=@MKDIR_PROG@
CP=@CP_PROG@

RU_TEXT_DOC_DIR=text

INS_DOC_DIR=@prefix@/share/doc/lightlang
INS_RU_TEXT_DOC_DIR=@prefix@/share/doc/lightlang/text/ru

#####
install :
	$(MKDIR) -p $(INS_RU_TEXT_DOC_DIR)
	$(CP) -r $(RU_TEXT_DOC_DIR)/* $(INS_RU_TEXT_DOC_DIR)

uninstall :
	$(RM) -rf $(INS_DOC_DIR)

