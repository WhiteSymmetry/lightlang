MKDIR=@MKDIR_PROG@
CP=@CP_PROG@
RM=@RM_PROG@

PKG_LIBS_DIR=pkg

INS_PKG_LIBS_DIR=@INS_PKG_LIBS_DIR@
INS_PKG_LIBS64_DIR=@INS_PKG_LIBS64_DIR@

#####
install :
	-$(MKDIR) -p $(DESTDIR)$(INS_PKG_LIBS_DIR)
	-$(MKDIR) -p $(DESTDIR)$(INS_PKG_LIBS64_DIR)
	-$(CP) $(PKG_LIBS_DIR)/lightlang.pc $(DESTDIR)$(INS_PKG_LIBS_DIR)
	-$(CP) $(PKG_LIBS_DIR)/lightlang.pc $(DESTDIR)$(INS_PKG_LIBS64_DIR)

uninstall :
	$(RM) -f $(DESTDIR)$(INS_PKG_LIBS_DIR)/lightlang.pc
	$(RM) -f $(DESTDIR)$(INS_PKG_LIBS64_DIR)/lightlang.pc

clean :
	$(RM) -f $(PKG_LIBS_DIR)/lightlang.pc

