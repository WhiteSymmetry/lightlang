MKDIR=@MKDIR_PROG@
CP=@CP_PROG@
RM=@RM_PROG@

PKG_LIBS_DIR=pkg

INS_PKG_LIBS_DIR=@INS_PKG_LIBS_DIR@

#####
install :
	$(MKDIR) -p $(INS_PKG_LIBS_DIR)
	-$(CP) $(PKG_LIBS_DIR)/lightlang.pc $(INS_PKG_LIBS_DIR)

uninstall :
	$(RM) -f $(INS_PKG_LIBS_DIR)/lightlang.pc

clean :
	$(RM) -f $(PKG_LIBS_DIR)/lightlang.pc

